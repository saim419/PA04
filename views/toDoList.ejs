<div>
  <h1>Transaction App <%= user.googlename %>
  </h1>
  <p>Here is your list of things to do!</p>
  <img src="https://learncybers.com/wp-content/uploads/2019/06/Computer-Science.jpg"
    style="position: fixed; bottom: 10px; right: 10px; width: 170px; height: 170;">
  <style>
    body {
      background-color: rgb(235, 194, 116);
    }

    .added-item {
      background-color: blue;
    }

    .list-group-item {
      background-color: rgba(128, 209, 236, 0.962);
    }
  </style>


  <ul class="list-group">
    <% items.forEach(item=> { %>
      <li class="list-group-item<%= item.added ? ' bg-primary added-item' : '' %>">
        <div class="row">
          <div class="col">
            <span class="">
              <% if (item.completed) { %>
                <a href="/todo/uncomplete/<%= item._id %>">
                  <i class="bi bi-check-circle-fill"></i>
                </a>
                <% } else { %>
                  <a href="/todo/complete/<%= item._id %>">
                    <i class="bi bi-check-circle"></i>
                  </a>
                  <% } %>
                    <a href="/todo/edit/<%= item._id %>">
                      <i class="bi bi-pencil" style="color: black;"></i>
                    </a>
                    <a href="/todo/remove/<%= item._id %>">
                      <i class="bi bi-trash" style="color: black;"></i>
                    </a>

            </span>
            <span class="ml-5">
              <%= item.item %>
            </span>
            <span class="badge rounded-pill bg-danger">
              <%= item.priority ? item.priority : 5 %>
            </span>
          </div>
          <div class="col">
            <p>Description: <%= item.description %>
            </p>
          </div>
          <div class="col">
            <p>Category: <%= item.category %>
            </p>
          </div>
          <div class="col">
            <p>Amount: <%= item.amount %>
            </p>
          </div>
          <div class="col">
            <p>Date: <%= item.date %>
            </p>
          </div>
        </div>
      </li>
      <br>
      <% }) %>

        <p class="m-2">
          <% if (show=='completed' ) { %>
            <a href="?show=todo">(Show tasks to do)</a>
            <% } else { %>
              <a href="?show=completed" style="color: black;">(Show completed tasks)</a>
              <% } %>
        </p>

        <form method="post" action="todo">
          <div class="form-group">
            <label for="item">New item:</label>
            <input type="text" name="item" id="item">
          </div>
          <div class="form-group">
            <label for="description">Description:</label>
            <input type="text" name="description" id="description">
          </div>
          <div class="form-group">
            <label for="category">Category:</label>
            <input type="text" name="category" id="category">
          </div>
          <div class="form-group">
            <label for="amount">Amount:</label>
            <input type="text" name="amount" id="amount">
          </div>
          <div class="form-group">
            <label for="date">Date:</label>
            <input type="date" name="date" id="date">
          </div>
          <div class="form-group">
            <label for="priority">Priority:</label>
            <select name="priority" id="priority">
              <option>1</option>
              <option>2</option>
              <option>3</option>
              <option>4</option>
              <option>5</option>
              <option>6</option>
              <option>7</option>
              <option>8</option>
              <option>9</option>
            </select>
          </div>

          <br>
          <input type="submit" value="Store">
        </form>
</div>